{
  "info": {
    "name": "Smart Helpdesk API",
    "description": "API collection for Smart Helpdesk system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@helpdesk.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Tickets",
      "item": [
        {
          "name": "Create Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Cannot reset password\",\n  \"description\": \"I forgot my password and the reset email is not arriving. I need help accessing my account.\",\n  \"category\": \"tech\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tickets",
              "host": ["{{baseUrl}}"],
              "path": ["tickets"]
            }
          }
        },
        {
          "name": "Get All Tickets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tickets",
              "host": ["{{baseUrl}}"],
              "path": ["tickets"]
            }
          }
        },
        {
          "name": "Get Ticket by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tickets/:ticketId",
              "host": ["{{baseUrl}}"],
              "path": ["tickets", ":ticketId"],
              "variable": [
                {
                  "key": "ticketId",
                  "value": "TICKET_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Reply to Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Thank you for contacting support. I've reset your password and sent you a new temporary password via email.\",\n  \"isAgent\": true,\n  \"status\": \"resolved\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tickets/:ticketId/reply",
              "host": ["{{baseUrl}}"],
              "path": ["tickets", ":ticketId", "reply"],
              "variable": [
                {
                  "key": "ticketId",
                  "value": "TICKET_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Knowledge Base",
      "item": [
        {
          "name": "Get All Articles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/kb",
              "host": ["{{baseUrl}}"],
              "path": ["kb"]
            }
          }
        },
        {
          "name": "Search Articles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/kb?query=password",
              "host": ["{{baseUrl}}"],
              "path": ["kb"],
              "query": [
                {
                  "key": "query",
                  "value": "password"
                }
              ]
            }
          }
        },
        {
          "name": "Create Article",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"How to Update Your Profile\",\n  \"body\": \"To update your profile: 1. Log into your account 2. Click on Profile Settings 3. Make your changes 4. Click Save\",\n  \"tags\": [\"profile\", \"settings\", \"account\"],\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/kb",
              "host": ["{{baseUrl}}"],
              "path": ["kb"]
            }
          }
        }
      ]
    },
    {
      "name": "Agent",
      "item": [
        {
          "name": "Trigger Triage",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketId\": \"TICKET_ID_HERE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/agent/triage",
              "host": ["{{baseUrl}}"],
              "path": ["agent", "triage"]
            }
          }
        },
        {
          "name": "Get Suggestion",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/agent/suggestion/:ticketId",
              "host": ["{{baseUrl}}"],
              "path": ["agent", "suggestion", ":ticketId"],
              "variable": [
                {
                  "key": "ticketId",
                  "value": "TICKET_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/healthz",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["healthz"]
        }
      }
    }
  ]
}